---
layout: admin/layout
---


.row-fluid.admin-wrapper
  = partial "sidebar"
  .span10.admin-content
    #dashboard-content
      .titlebar
        .row-fluid
          .span6
            %h3.title Post Analytics
          .span6
            .daterange-selection.pull-right
              =link_to '#' do
                23 April, 2013 - 19 May, 2013
                %i.icon-caret-down
      .page-views#pageviews-graph

      .sparkline-metrics
        .row-fluid
          .span12
            .graph-section
              .header
                %h4 Blog Usage
              .content
                .row-fluid
                  .span6
                    .row-fluid.sparkline-graph
                      .span6
                        #sparkline1
                      .span6
                        .sparkline-label
                          =link_to 'Visits', '#'
                    .row-fluid.sparkline-graph
                      .span6
                        #sparkline2
                      .span6
                        .sparkline-label
                          =link_to 'Bounce Rate', '#'
                  .span6
                    .row-fluid.sparkline-graph
                      .span6
                        #sparkline3
                      .span6
                        .sparkline-label
                          = link_to 'Avg. Time on Blog', '#'
                    .row-fluid.sparkline-graph
                      .span6
                        #sparkline4
                      .span6
                        .sparkline-label
                          = link_to '% New Visits', '#'


      .primary-metrics
        .row-fluid
          .span6
            .graph-section
              .header
                %h4 Browser Versions
              .content
                #browserversions-graph

          .span6
            .graph-section
              .header
                %h4 Page Views (Content)
              .content
                %table.table
                  %thead
                    %tr
                      %th #
                      %th Page
                      %th Views
                  %tbody
                    %tr
                      %td 1
                      %td Bootstrap and Font-Awesome
                      %td 9500
                    %tr
                      %td 2
                      %td New Flat UI Design
                      %td 8980





